<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Spot</title>
    <link rel="stylesheet" href="/css/site.min.css?v=@DateTime.Now.ToString("MMddyyyyhhmm")" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    @RenderSection("Styles", required: false) 
</head>
<body>
    <div class="page-wrapper">
        <div class="page-inner">
            @Html.Partial("_Sidebar.cshtml")
            <div class="page-content-wrapper">
                @Html.Partial("_Top.cshtml")
                <div class="page-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
    <script>
        $(document).ready(function () {
            MainNavigation.init(document.getElementById('navigation-toggle'));
        });
    </script>
</body>
</html>
